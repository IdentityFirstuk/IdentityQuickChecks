<#
    Break-Glass Reality Check
    Identifies accounts named/described as break-glass and checks their posture
#>

param(
    [string]$OutputPath = "."
)

Write-IFQC -Message "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•" -Level Info
Write-IFQC -Message "  Break-Glass Reality Check" -Level Info
Write-IFQC -Message "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•" -Level Info
Write-IFQC -Message "" -Level Info
Write-IFQC -Message "  Finding accounts named/described as break-glass..." -Level Info
Write-IFQC -Message "" -Level Info

try {
    Import-Module ActiveDirectory -ErrorAction Stop
}
catch {
    Write-IFQC -Message "  âœ— ActiveDirectory module not available" -Level Error
    Write-IFQC -Message "  â„¹ Install RSAT AD tools or run on a Domain Controller" -Level Info
    exit 1
}

$breakGlass = Get-ADUser -Filter * -Properties Description,PasswordNeverExpires,lastLogonTimestamp |
    Where-Object {
        $_.SamAccountName -match "break|emerg|bg-" -or
        $_.Description -match "break|emerg"
    } |
    Select-Object SamAccountName,Enabled,
        @{Name="PasswordNeverExpires";Expression={$_.PasswordNeverExpires}},
        @{Name="LastLogon";Expression={
            if($_.lastLogonTimestamp) {
                [DateTime]::FromFileTime($_.lastLogonTimestamp).ToString("yyyy-MM-dd")
            } else { "Never" }
        }},
        Description

if ($breakGlass) {
    Write-IFQC -Message "  âš  Found $($breakGlass.Count) break-glass accounts" -Level Warning
    Write-IFQC -Message "" -Level Info
    $breakGlass | Format-Table -AutoSize
    
    # Export report
    $timestamp = Get-Date -Format "yyyy-MM-dd_HH-mm-ss"
    $jsonPath = Join-Path $OutputPath "BreakGlassReality-$timestamp.json"
    $report = @{
        check = "Break-Glass Reality Check"
        timestamp = (Get-Date).ToString("o")
        count = ($breakGlass | Measure-Object).Count
        data = $breakGlass
    }
    $report | ConvertTo-Json -Depth 5 | Out-File -FilePath $jsonPath -Encoding UTF8
    Write-IFQC -Message "" -Level Info
    Write-IFQC -Message "  ğŸ“„ Report saved: $jsonPath" -Level Info
}
else {
    Write-IFQC -Message "  âœ“ No break-glass accounts found" -Level Success
}

Write-IFQC -Message "" -Level Info
Write-IFQC -Message "  â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€" -Level Info
Write-IFQC -Message "  â„¹  This script shows break-glass accounts exist." -Level Info
Write-IFQC -Message "     It cannot answer: Who approved them? When tested? Controls?" -Level Info
Write-IFQC -Message "     For governance analysis, run IdentityHealthCheck." -Level Info
Write-IFQC -Message "  â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€" -Level Info

