{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "IFQC Evidence Item",
  "type": "object",
  "required": ["type", "id", "source", "timestamp"],
  "properties": {
    "type": { "type": "string", "description": "Canonical type (e.g. 'entra.user', 'ad.user', 'aws.iamUser')" },
    "id": { "type": "string", "description": "Canonical unique id for the item" },
    "source": { "type": "string", "description": "Collector name or source" },
    "timestamp": { "type": "string", "format": "date-time" },
    "upn": { "type": ["string", "null"] },
    "displayName": { "type": ["string", "null"] },
    "accountEnabled": { "type": ["boolean", "null"] },
    "lastSignIn": { "type": ["string", "null"], "format": "date-time" },
    "signals": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Optional signals (e.g. 'mfaRegistered','legacyAuthUsed')"
    },
    "metadata": { "type": "object", "additionalProperties": true }
  },
  "additionalProperties": true
}
